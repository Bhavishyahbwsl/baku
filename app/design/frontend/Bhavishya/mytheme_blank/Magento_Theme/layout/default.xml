<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/styles.css" />
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <container name="caller.block.container">
                <block class="Magento\Framework\View\Element\Template" name="caller.block" template="Magento_Theme::caller.phtml" before='-'/>
            </container>
        </referenceContainer>

        <referenceContainer name="caller.block.container">
            <block class="Magento\Framework\View\Element\Template" name="caller.block.2" template="Magento_Theme::caller2.phtml" after='caller.block'/>
        </referenceContainer>
         <referenceContainer name="header.panel.wrapper" remove="true" />
         <block class="Magento\Store\Block\Switcher" name="store_switcher" as="store_switcher" template="Magento_Store::switch/stores.phtml"/>
        <referenceBlock name="footer_links" remove="true"></referenceBlock>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="report.bugs"  remove="true"/>            
    </body>
</page>